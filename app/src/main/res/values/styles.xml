<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyButtonStyle">
        <item name="android:backgroundTint">#2A2A2A</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="EqualButtonStyle" parent="MyButtonStyle">
        <item name="android:backgroundTint">#FF9800</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ClearButtonStyle" parent="MyButtonStyle">
        <item name="android:backgroundTint">#D62828</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Options" parent="MyButtonStyle">
        <item name="android:backgroundTint">#003049</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ResultTextStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">end</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>
