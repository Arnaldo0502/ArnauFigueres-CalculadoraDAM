<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="376dp"
        android:layout_height="482dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow>

            <Button
                android:id="@+id/btnPorcentaje"
                style="@style/Options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="%" />


            <Button
                android:id="@+id/btnParentesiIzq"
                style="@style/Options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(" />


            <Button
                android:id="@+id/btnParentesiDer"
                style="@style/Options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=")"

                />

            <Button
                android:id="@+id/btnRestar"
                style="@style/Options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                style="@style/MyButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                style="@style/MyButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textColorHighlight="@color/pink"
                android:textColorHint="@color/design_default_color_error"
                android:textColorLink="#3F51B5" />

            <Button
                android:id="@+id/btn9"
                style="@style/MyButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textColorHighlight="@color/pink"
                android:textColorHint="@color/design_default_color_error"
                android:textColorLink="#3F51B5" />

            <Button
                android:id="@+id/btnMultiplicar"
                style="@style/Options"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                style="@style/MyButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                style="@style/MyButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColorHighlight="@color/pink"
                android:textColorHint="@color/design_default_color_error"
                android:textColorLink="#3F51B5" />

            <Button
                android:id="@+id/btn6"
                style="@style/MyButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColorHighlight="@color/pink"
                android:textColorHint="@color/design_default_color_error"
                android:textColorLink="#3F51B5" />

            <Button
                android:id="@+id/btnDiv"
                style="@style/Options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="/" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="62dp">

            <Button
                android:id="@+id/btn1"
                style="@style/MyButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                style="@style/MyButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColorHighlight="@color/pink"
                android:textColorHint="@color/design_default_color_error"
                android:textColorLink="#3F51B5" />

            <Button
                android:id="@+id/btn3"
                style="@style/MyButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColorHighlight="@color/pink"
                android:textColorHint="@color/design_default_color_error"
                android:textColorLink="#3F51B5" />

            <Button
                android:id="@+id/btnSum"
                style="@style/Options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="84dp">

            <Button
                android:id="@+id/btnClear"
                style="@style/ClearButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C" />

            <Button
                android:id="@+id/btn0"
                style="@style/MyButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <Button
                android:id="@+id/btnComa"
                style="@style/MyButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="," />

            <Button
                android:id="@+id/buttonEqual"
                style="@style/EqualButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="=" />


        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/tvRes"
        style="@style/ResultTextStyle"
        android:layout_width="372dp"
        android:layout_height="81dp"
        android:layout_marginBottom="32dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="(23*45)/15" />
</androidx.constraintlayout.widget.ConstraintLayout>